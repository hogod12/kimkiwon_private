<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item active">분석리포트</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    대학검색
  </div>
  <div class="card-body">
    
    <form action="analysis">
    	<div class="form-group">
        <div class="form-label-group">
          <a>학생결과코드</a>
          <input type="text" id="result_index" class="form-control" readonly="readonly" required="required" name="result_index" autofocus="autofocus" value=<%= data["result_index"] %>>
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <select name="university_index" class="form-control" style="width:300px">
            <option value="-1" disabled="disabled" selected="selected">시험선택</option>
            <% for (var i in data["university_list"]) { %>
              <option value="<%=data["university_list"][i]["university_index"]%>">[<%= data["university_list"][i]["university_year"] %>] <%=data["university_list"][i]["university_name"]%> - <%=data["university_list"][i]["university_department"]%></option>
            <% } %>
          </select>
        </div>
      </div>
      <input type="submit" class="btn btn-primary" value="검색">
    </form>
      
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-chart-bar"></i>
    <%= data["university_statistics"]["university_name"] %> <%= data["university_statistics"]["university_department"] %> 합격생 통계</div>
  <div class="card-body">
    <canvas id="myBarChart" width="100%" height="30"></canvas>
    <a>샘플 수 : <%= data["university_statistics"]["count"] %></a>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>