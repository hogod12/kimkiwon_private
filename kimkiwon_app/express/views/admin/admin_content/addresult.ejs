<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item active">결과입력</li>
</ol>

<div class="card mb-3">
  <div class="card-header"><i class="fas fa-table"></i>결과파일 업로드</div>
  
  <div class="card-body">
    
    <form action="addresultdatabulk" method="post" enctype="multipart/form-data">
      
      <div class="form-group">
        <div class="form-label-group">
          <select name="exam_index" class="form-control" style="width:300px">
            <option value="-1" disabled="disabled" selected="selected">시험선택</option>
            <% for (var i in data["exam_list"]) { %>
              <option value="<%=data["exam_list"][i]["exam_index"]%>">[<%= data["exam_list"][i]["exam_year"] %>] <%=data["exam_list"][i]["exam_name"]%></option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <select name="mentor_index" class="form-control" style="width:300px">
            <option value="-1" disabled="disabled" selected="selected">채점자</option>
            <% for (var i in data["mentor_list"]) { %>
              <option value="<%=data["mentor_list"][i]["user_index"]%>">[<%= data["mentor_list"][i]["user_index"] %>] <%=data["mentor_list"][i]["user_name"]%></option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <select name="result_class" class="form-control" style="width:300px">
            <option value="-1" disabled="disabled" selected="selected">반 선택</option>
            <% for (var i in data["class_list"]) { %>
              <option value="<%=data["class_list"][i]["class_index"]%>">[<%= data["class_list"][i]["class_year"] %>] <%=data["class_list"][i]["class_schedule"]%> - <%=data["class_list"][i]["curriculum_name"]%></option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <div class="form-group">
            <input type="file" id="result_excel" class="form-control-file" required="required" name="result_excel">
          </div>
        </div>
      </div>

      <input type="submit" class="btn btn-primary" value="엑셀 입력">

    </form>
  </div>
  
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
