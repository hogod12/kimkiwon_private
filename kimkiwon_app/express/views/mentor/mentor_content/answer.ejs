<div class="card mb-3">
  <div class="card-header">질의답변서</div>
  
  <div class="card-body">
    

    <form action="addanswer" method="post">
      
      <div class="form-group">
        <div class="form-label-group">
          <a>시험</a>
          <input type="text" id="exam_name" class="form-control" readonly="readonly" required="required" name="exam_name" value="<%= data["exam_name"] %>" >
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <a>질문번호</a>
          <input type="text" id="question_index" class="form-control" readonly="readonly" required="required" name="question_index" value="<%= data["question_data"]["question_index"] %>" >
        </div>
      </div>

      <div class="form-group">
        <div class="form-label-group">
          <a>질문내용</a>
          <textarea type="text" id="question_text" class="form-control" required="required" readonly="readonly" name="question_text" rows="8" maxlength="1000" placeholder="<%= data["question_data"]["question_text"] %>"></textarea>
        </div>
      </div>
      
      <div class="form-group">
        <div class="form-label-group">
          <a>답변내용</a>
          <textarea type="text" id="answer_text" class="form-control" required="required" name="answer_text" rows="8" maxlength="1000" placeholder="<%= data["question_data"]["answer_text"] %>"></textarea>
        </div>
      </div>

      <input type="submit" class="btn btn-primary" value="답변">

    </form>

  </div>
  
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>