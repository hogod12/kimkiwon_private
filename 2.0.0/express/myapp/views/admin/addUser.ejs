<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>김기원T 수리논술 성적관리 페이지</title>

  <!-- Custom fonts for this template-->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- SideBar -->
    <%- include('sidenav.ejs') -%>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">
        <!-- TopBar -->
        <%- include('topnav.ejs') -%>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <div class="col-mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">현재 입시</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">2019</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-mb-3">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">김기원T 수리논술</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">학생 정보 입력</div>
                    <hr>
                    
                    <form action="adduserrequest" method="post">

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>학생명</a>
                          <input type="text" id="user_name" class="form-control" required="required" name="user_name" autofocus="autofocus">
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>학교명</a>
                          <input type="text" id="school_name" class="form-control" required="required" name="school_name" autofocus="autofocus">
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>전화번호</a>
                          <input type="text" id="user_phonenumber" class="form-control" required="required" name="user_phonenumber" autofocus="autofocus">
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>권한설정</a>
                          <select class="form-control" id="user_authority" name="user_authority" required="required">
                              <option value=1>관리자</option>
                              <option value=2>강사</option>
                              <option value=3>조교</option>
                              <option value=4>학생</option>
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>재학/졸업</a>
                          <select class="form-control" id="user_graduation" name="user_graduation" required="required">
                              <option value=1>재학</option>
                              <option value=2>졸업</option>
                              <option value=3>미응답</option>
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>입시연도</a>
                          <select class="form-control" id="user_year" name="user_year" required="required">
                              <option value=<%= data["current_year"]["year_index"] %>>[<%= data["current_year"]["year_index"] %>] <%= data["current_year"]["year_name"] %></option>
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>학생메모</a>
                          <textarea id="user_desc" class="form-control" required="required" name="user_desc" rows="8"></textarea>
                        </div>
                      </div>

                      <hr>

                      <input type="submit" class="btn btn-primary" value="학생 추가">

                    </form>

                  </div>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <div class="col-mb-3">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">김기원T 수리논술</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">엑셀 입력</div>
                    <hr>
                    
                    <form action="adduserbulkrequest" method="post" enctype="multipart/form-data">

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>파일입력</a>
                          <input type="file" id="user_excel" class="form-control" required="required" name="user_excel">
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-label-group">
                          <a>입시연도</a>
                          <select class="form-control" id="user_year" name="user_year" required="required">
                              <option value=<%= data["current_year"]["year_index"] %>>[<%= data["current_year"]["year_index"] %>] <%= data["current_year"]["year_name"] %></option>
                          </select>
                        </div>
                      </div>

                      <hr>

                      <input type="submit" class="btn btn-primary" value="엑셀 입력">

                    </form>

                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2019</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>
</body>

</html>
